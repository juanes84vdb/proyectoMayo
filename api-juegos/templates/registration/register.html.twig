{% extends 'base.html.twig' %}

{% block title %}Registro{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <h1 class="text-center mt-5 mb-4">Registrarse</h1>

                {{ form_errors(registrationForm) }}

                {{ form_start(registrationForm) }}

                <div class="mb-3">
                    {{ form_row(registrationForm.username, {'attr': {'class': 'form-control', 'placeholder':
                    'Username'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_row(registrationForm.plainPassword, {'label': 'Password', 'attr': {'class':
                    'form-control'}}) }}
                </div>
                <div class="mb-3 form-check">
                    {{ form_row(registrationForm.agreeTerms, {'label': 'I agree to the terms', 'attr': {'class':
                    'form-check-input'}}) }}
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Registrarse</button>
                </div>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}
